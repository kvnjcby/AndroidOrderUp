<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kejaco.androidorderup.MainActivity">


    <Button
        android:id="@+id/manageOrders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginBottom="10dp"
        android:text="Manage Orders" />

    <Button
        android:id="@+id/manageMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginBottom="10dp"
        android:text="Manage Menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Order Total: "
        android:layout_marginLeft="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="$0.00" />


    <Button
        android:id="@+id/placeOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="4"
        android:padding="5dp"
        android:background="#00dddd"
        android:onClick="placeOrder"
        android:text="Place Order" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="10"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Menu"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="16pt"/>

    <ListView
        android:id="@+id/lvMenuItem"
        android:layout_column="0"
        android:layout_columnSpan="10"
        android:layout_row="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</GridLayout>

